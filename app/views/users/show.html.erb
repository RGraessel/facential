<div class="col-md-12" id="universal_container">
  <div class="col-md-2" id="user_nav_partial">
    <div id="signed_in_as"><%= render :partial => '/commons/user_nav' %>
      <% if current_user %>
      Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout' %>
      <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
      <% end %>
    </div>
  </div>
  <div id="space_above_first_lesson_bubble"></div>
  <div class="col-md-10 col-md-offset-3" id="space_replacing_course_name">Lessons</div>
  <% current_user.lessons.each do |lesson| %>
  <div class="col-md-8" id="lesson_dash_text"><%= lesson.lesson_name.capitalize %></div>
  <%= link_to topic_lesson_path(current_user, lesson) do %>
  <div class="col-md-10 container col-md-offset-3" id="user_screen_section">
    <div class="col-md-4 progress_block w3-hover-shadow" id="available_lessons">
      <div class ="col-md-2" id="course_progress"></div>
      <div class="col-md-9 progress" id="progress_bar">
        <div class="progress-bar progress-bar-success" style= "width: <%=@completed[lesson] * 100 %>%"></div>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>

  <!-- closes col-md-10 id="course_name", this section has
  upcoming lesson submissions -->
  <div class="col-md-10 col-md-offset-2" id="space_under_lesson">
    <!-- <div id="space_under_lesson"></div> -->
    <span class="badge_title">Badges</span>
    <div class="col-md-5" id="medals_section">
      <!-- <div class="col-md-offset-1" id="ml"> -->
      <ul class="medals">
        <li class="medal_list">
          <div class ="col-md-5 col-md-offset-1" id="badge_icon1"></div>
        </li>
        <li>
          <div class ="col-md-5 col-md-offset-1" id="badge_icon2"></div>
        </li>
        <li>
          <div class ="col-md-5 col-md-offset-1" id="badge_icon3"></div>
        </li>
        <li>
          <div class ="col-md-5 col-md-offset-1" id="badge_icon4"></div>
        </li>
      </ul>
      <div>
        <ul class="medals">
          <li class="medal_list">
            <div class ="col-md-5 col-md-offset-1" id="badge_icon5"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon6"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon7"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon8"></div>
          </li>
        </ul>
      </div>
      <div>
        <ul class="medals">
          <li class="medal_list">
            <div class ="col-md-5 col-md-offset-1" id="badge_icon9"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon10"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon11"></div>
          </li>
          <li>
            <div class ="col-md-5 col-md-offset-1" id="badge_icon12"></div>
          </li>
        </ul>
      </div>
    </div>
    <div class="top_progress_title text-center">Topic Progress</div>
    <div class="col-md-5 col-md-offset-2" id="recent_topic_progress">
      <% @topic.topic_name %>
      <%= link_to course_topics_path(@topics) do  %>
      <div class="topic_circle_progress" style= "width: <%= @progress[current_user.topics.first] %>%; height: <%= @progress[current_user.topics.first] %>%; max-width: 100px; max-height: 100px"></div>
    </div>
    <% end %>
  </div>
</div>

    <!-- <div class="col-md-offset-1">
    Recent Lessons Submitted Section
  </div> -->
</div>
