<div class="col-md-12" id="universal_container">
<div class="col-md-2" id="user_nav_partial">
  <div><%= render :partial => '/commons/user_nav' %>
    <% if current_user %>
      Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
  </div>
</div>

<div id="space_above_first_lesson_bubble"></div>
<div class="col-md-10 col-md-offset-3" id="user_screen_section">

  <div class="col-md-10" id="course_name"></div>
  <div class="col-md-10 progress_block w3-hover-shadow" id="wrapper">
    <div class="col-md-2" id="course_progress"></div>
    <div class="col-md-10 progress" id="progress_bar">
      <span class="progress-bar progress-bar-success" style="width:50%"></span>
    </div>
  </div>
  <!-- closes col-md-10 id="course_name", this section has
    upcoming lesson submissions -->
  <div class="col-md-10">
    <div class="col-md-5" id="medals_section">
      Medals Section
    </div>

    <div class="cold-md-5 coll-md-offset-5" id="recent_submissions_section">
      Recent Lessons Submitted Section
    </div>
  </div>

</div> <!-- closes col-md-10 for dashboard section, constraints
  everything that is not in the partial -->
</div> <!-- closes col-md-12 universal_container -->
