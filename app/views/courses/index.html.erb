<div class="col-md-3" id="user_nav_partial">
  <div><%= render :partial => '/commons/courses_nav' %>
    <% if current_user %>
      Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
  </div>
</div>
<div class="col-md-9 container" id="course_data_container">
  <div id="space_above_first_course_bubble"></div>
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-12">
      <ul>
        <% @courses.each do |course| %>
        <li id="course_progress"></li>
        <li id="course_name"><%= course.course_name.capitalize %></li>
        <li class="progress" id="progress_bar">
          <span class="progress-bar progress-bar-success" style="width:50%">
          </span>
        </li>
        </li>
        <% end %>
      </ul>
      <%= yield %>
    </div>
    <!--  Closes col-md-12 -->
    </div>
</div>
