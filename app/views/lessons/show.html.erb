<div class="col-md-12" id="universal_container">
<div class="col-md-2" id="user_nav_partial">
  <div><%= render :partial => '/commons/user_nav' %>
    <% if current_user %>
    Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
  </div>
</div>
<div id="space_above_first_lesson_bubble"></div>
<div class="col-md-9 col-md-offset-3" id="lesson_screen_section">
  <div class="col-md-12">
  <div class="col-md-1 progress_circle w3-hover-shadow" id="wrapper"></div>
  <!-- <div class="col-md-10" id="course_name">course name</div> -->
  <div class="col-md-10 progress_block w3-hover-shadow" id="available_lessons">
      <div class="col-md-10 progress" id="progress_bar">
        <div class="progress-bar progress-bar-success" style="width:50%"></div>
      </div>
  </div>
</div>


<div class="col-md-12">

<div class="col-md-6">
  <div class="embed-container">
    <iframe src="//www.youtube.com/embed/B6-45rswo0o"></iframe>
  </div>
</div>

<div class="col-md-6" id="videos">
  <div id="subscriber"></div>
  <div id="publisher"></div>

  <span id="buttons">
    <button type="button" id="start" onClick="javascript:startArchive()" class="btn btn-danger">Start Recording</button>
    <button type="button" id="stop" onClick="javascript:stopArchive()" class="btn btn-danger">Stop Recording</button>
    <button type="button" id="view" onClick="javascript:viewArchive()" class="btn btn-danger" disabled>View Submission</button>
  </span>
</div>





</div> <!--closes col-md-12 of videos -->

<div id="lesson_script">
  <div class="script">
    This is a description of the lesson that is being viewed.
  </div>
</div>
</div>
